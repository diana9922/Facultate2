@page
@model Facultate2.Pages.Studenti.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.ID" />
            <div class="form-group">
                <label asp-for="Student.Nume" class="control-label"></label>
                <input asp-for="Student.Nume" class="form-control" />
                <span asp-validation-for="Student.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Prenume" class="control-label"></label>
                <input asp-for="Student.Prenume" class="form-control" />
                <span asp-validation-for="Student.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.NrMatricol" class="control-label"></label>
                <input asp-for="Student.NrMatricol" class="form-control" />
                <span asp-validation-for="Student.NrMatricol" class="text-danger"></span>
            </div>
            
            <label asp-for="Student.ProfesorID" class="control-label">Profesor Coordonator</label>
            <select asp-for="Student.ProfesorID" class="form-control" asp-items="ViewBag.ProfesorID">
            </select>
            <span asp-validation-for="Student.ProfesorID" class="text-danger"></span>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedSpecializareDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedSpecializari"
                                               value="@cat.SpecializareID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.SpecializareID @: @cat.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
